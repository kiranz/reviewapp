<p id="notice"><%= notice %></p>

<div class="login">
  <div class="container">
    <div class="form">

      <h1>Log in</h1>

      <%= form_for(:session, url: '/login') do |f| %>
          <%= f.email_field :email, :placeholder => "Email" %>
          </br>
          </br>
          <%= f.password_field :password, :placeholder => "Password" %>
          </br>
          </br>
          <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</div>